<div class="settings-wrapper">
    <div class="row">
        <form action="auth/change" method="post" class="form col s12">
            <div class="row">
                <div class="input-field col s7">
                    <input name="oldPassword" type="password" id="oldPassword-input">
                    <label for="oldPassword-input">Введите старый пароль</label>
                </div>
                <div class="input-field col s7">
                    <input name="newPassword" type="password" id="newPassword-input">
                    <label for="newPassword-input">Введите новый пароль</label>
                </div>
            </div>

            <button type="submit" class="btn">Сохранить</button>

        </form>
    </div>
</div>
