<h2>Отправить смс </h2>


<div class="row">
    <form action="api/sendMessage" method="post" class="form col s12">
        <div class="row">
            <div class="input-field col s7">
                <input onchange="validateValue()"  oninput="validateValue()" name="CdPN" id="icon_telephone" type="tel">
                <label for="icon_telephone">Введите номер телефона</label>
            </div>
            <div class="input-field col s7">
                <textarea onchange="validateValue()"  oninput="validateValue()"  name="text" id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1" class="text-label">Выберите сообщение из шаблонов ниже</label>
            </div>
        </div>

        <button type="submit" class="btn disabled">Отправить</button>

    </form>
</div>

<div class="templates-wrapper">
    <div class="row">
    {{#each templates}}

            <div class="col s4">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{title}}</span>
                        <p class="template-text">{{content}}</p>
                    </div>
                </div>
            </div>



    {{/each}}
    </div>
</div>



{{#if messages.length}}
    <table>
        <thead>
        <tr>
            <th>Имя пользователя</th>
            <th>Номер телефона</th>
            <th>Текст сообщения</th>
            <th>Дата и время</th>
        </tr>
        </thead>
        <tbody>
        {{#each messages}}
            <tr>
                <td>{{user}}</td>
                <td>{{number}}</td>
                <td>{{content}}</td>
                <td>{{date}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>


{{else}}
    <p>Пока нет отправленных смс</p>
{{/if}}




<script src="/front.js"></script>


